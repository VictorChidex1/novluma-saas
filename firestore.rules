rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // 1. User Profiles: Users read OWN, Admins read ALL
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // 2. Projects: Users read OWN, Admins read ALL
    match /projects/{projectId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // 3. Blog Posts: Public Read, Admin Write
    match /blog_posts/{post} {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    // 4. Job Applications: Public create, Admin read
    match /applications/{applicationId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // 5. Contact Messages: Public create, Admin read
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }


    // 6. System Config (Kill Switch): Public Read, Admin Write
    match /system_config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 7. Brand Voices: Users can read/write their OWN voices
    match /brand_voices/{voiceId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 8. Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}